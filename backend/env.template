# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Supabase Configuration (REQUIRED)
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Razorpay Configuration (Optional - for payment features)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret

# Gemini AI Configuration (Optional - for AI features)
GEMINI_API_KEY=your-gemini-api-key
# GEMINI_MODEL=gemini-pro-latest  # Optional: specify preferred model (default: gemini-pro-latest)

# JWT Secret (Optional - for custom auth)
JWT_SECRET=your-secret-key-change-in-production

